# ============================================
# POLYMARKET BOT - ENVIRONMENT CONFIGURATION
# ============================================
# Kopyalayın: copy .env.example .env
# Kendi değerlerinizi doldurun.

# --- Polymarket Wallet ---
# Polymarket hesabınızdan export edin: Cash > ... > Export Private Key
POLYMARKET_PRIVATE_KEY=your_private_key_here

# API Credentials (otomatik oluşturulacak, boş bırakabilirsiniz)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_PASSPHRASE=

# Funder address (email/magic wallet kullanıyorsanız)
POLYMARKET_FUNDER_ADDRESS=

# Signature type: 0 = EOA (MetaMask), 1 = Email/Magic wallet, 2 = Gnosis Safe
POLYMARKET_SIGNATURE_TYPE=0

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# --- Trading Parameters ---
# DRY_RUN=true ise gerçek emir gönderilmez
DRY_RUN=true

# Maksimum tek işlem büyüklüğü (USDC)
MAX_ORDER_SIZE=10

# Maksimum toplam pozisyon (USDC)
MAX_TOTAL_EXPOSURE=100

# Stop-loss yüzdesi (0.15 = %15)
STOP_LOSS_PCT=0.15

# Take-profit yüzdesi (0.30 = %30)
TAKE_PROFIT_PCT=0.30

# Günlük max kayıp limiti (USDC)
DAILY_LOSS_LIMIT=50

# Minimum likidite (USDC) - düşük likidite marketleri atlar
MIN_LIQUIDITY=1000

# Market tarama aralığı (saniye)
SCAN_INTERVAL=60

# Minimum güven skoru (0-1 arası, strateji sinyali eşiği)
MIN_CONFIDENCE=0.65

# --- API Endpoints ---
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com

# --- Logging ---
LOG_LEVEL=INFO
